{% extends 'base.html.twig' %}

{% block title %}
	Liste des produits
{% endblock %}

{% block body %}
	<section>
		<h1>Administration des produits</h1>
		<a href="{{ path('admin.products.create')}}" class="mt-2 btn btn-primary">Cr√©er un produit</a>
		<div>
			{% for product in products %}
				<div>
					<h4>{{ product.name }}</h4>
					<p>{{ product.description }}</p>
					<p>{{ product.authenticity }}</p>
					<p>{{ product.enable ? 'Actif' : 'Inactif'}}</p>
					<div>
						<a href="{{ path('admin.products.edit', {id: product.id}) }}">Modifier</a>
						{% include 'Backend/Product/_deleteForm.html.twig' %}
					</div>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
