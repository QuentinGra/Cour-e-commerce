<div {{ stimulus_controller('addCollection') }}>
	<ul class="productImages" data-index="{{ form.productImages|length > 0 ? form.productImages|last.vars.name + 1 : 0}}" data-prototype="{{ form_widget(form.productImages.vars.prototype)|e('html_attr') }}">
		{% for productImage in form.productImages %}
			<li>{{ form_widget(productImage) }}</li>
		{% endfor %}
	</ul>
	<button type="button" class="add_item_link" data-collection-holder-class="productImages">Add a Images</button>
</div>
