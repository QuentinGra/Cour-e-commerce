{% extends 'base.html.twig' %}

{% block title %}
	Admin des users
{% endblock %}

{% block body %}
	<section>
		<h1>Administration des users</h1>
		<div>
			{% for user in users %}
				<div>
					<h4>{{ user.fullName }}</h4>
					<p>{{ user.email }}</p>
					<p>{{ user.roles|join(', ') }}</p>
					<div>
						<a href="{{ path('admin.users.edit', {id: user.id}) }}">Modifier</a>
						{# TODO: Ajouter form delete users #}
					</div>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
